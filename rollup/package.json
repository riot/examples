{
  "name": "riot-rollup-example",
  "version": "1.1.0",
  "description": "Riot with Rollup",
  "private": true,
  "scripts": {
    "start": "npm run watch & npm run server",
    "build": "rollup -c",
    "watch": "rollup -c -w 'src/**'",
    "server": "browser-sync start --files 'dist/*, index.html' --server"
  },
  "dependencies": {
    "marked": "^2.1.3",
    "riot": "^6.0.2"
  },
  "devDependencies": {
    "@riotjs/compiler": "^6.0.2",
    "browser-sync": "^2.27.10",
    "rollup": "^2.55.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-riot": "^6.0.0"
  },
  "license": "MIT"
}
